<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<style type="text/css">
</style>
<script type="module">
    import { startListDeck } from "./scripts/decks.mjs";

    // Wait for the DOM to be fully loaded
    document.addEventListener("DOMContentLoaded", () => {
      const listDeckButton = document.getElementById("listDeckButton");
      listDeckButton.addEventListener("click", () => {
        startListDeck();
      });
    });
  </script>
<title>Deck Evaluation</title>
<link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
<link rel="manifest" href="/assets/site.webmanifest">
<link rel="stylesheet" type="text/css" href="/assets/decks.css">
</head>
<body>
<div id="header">
    <%- include('partials/nav'); -%>
</div>
<div id="container">
   <div id="sidebar">
	<a href="https://magic.wizards.com/en/game-info/gameplay/rules-and-formats/banned-restricted">Banned List</a>
    <%- include('partials/decklist'); -%>
	<button type="button" id="listDeckButton">List Deck</button>
  </div>
     <h2>Design Goal</h2>
	 <p id="DesignGoal"></p>
<div id="main">
<div class="highlighted-box">
	<table border="0" class="highlighted-box" id="tblSingleDeck">
	 <tr><th colspan="2" class="style1" id="DeckListName">Deck Name</th></tr>
 	 <tr><td>Deck Size</td><td class="deckSize" id="deckSize"></td></tr>
	 <tr><td>Converted Cost</td><td class="TotConvertedCost" id="TotConvertedCost"></td></tr>
   <tr><td>Lands</td><td class="TotLands" id="TotLands"></td></tr>
   <tr><td>Creatures</td><td class="TotCreatures" id="TotCreatures"></td></tr>
	 <tr><td>Instants</td><td class="TotInstants" id="TotInstants"></td></tr>
	 <tr><td>Sorceries</td><td class="TotSorceries" id="TotSorceries"></td></tr>
	 <tr><td>Enchantments</td><td class="TotEnchantments" id="TotEnchantments"></td></tr>
	 <tr><td>Artifacts</td><td class="TotArtifacts" id="TotArtifacts"></td></tr>
   <tr><td>Planeswalkers</td><td class="TotPlaneswalkers" id="TotPlaneswalkers"></td></tr>
	</table>
</div>
<div class="highlighted-box">
<table class="highlighted-box" id="tblCostDist">
  <tr>
  <th colspan="8" class="style1">Cost Distribution</th></tr>
  <tr><td>Zero</td><td class="ZeroCost" id="ZeroCost"></td></tr>
  <tr><td>One</td><td class="OneCost" id="OneCost"></td></tr>
  <td>Two</td><td class="TwoCost" id="TwoCost"></td></tr>
  <tr><td>Three</td><td class="ThreeCost" id="ThreeCost"></td></tr>
  <tr><td>Four</td><td class="FourCost" id="FourCost"></td></tr>
  <tr><td>Five</td><td class="FiveCost" id="FiveCost"></td></tr>
  <tr><td>Six</td><td class="SixCost" id="SixCost"></td></tr>
  <tr><td>Seven or More</td><td class="SevenmoreCost" id="SevenmoreCost"></td></tr>
</table>
</div>
<div class="highlighted-box">
<table id="tblColorDist">
  <tr><th colspan="3" class="style1">Color Distribution</th></tr>
  <tr><th colspan="1"></th><th colspan="1">Cost</th><th colspan="1">Cards</th></tr>
  <tr><td>Blue</td><td id="BlueCost"></td><td id="BlueCards"></td></tr>
  <tr><td>Red</td><td id="RedCost"></td><td id="RedCards"></td></tr>
  <tr><td>Black</td><td id="BlackCost"></td><td id="BlackCards"></td></tr>
  <tr><td>White</td><td id="WhiteCost"></td><td id="WhiteCards"></td></tr>
  <tr><td>Green</td><td id="GreenCost"></td><td id="GreenCards"></td></tr>
  <tr><td>Colorless</td><td id="ColorlessCost"></td><td id="ColorlessCards"></td></tr>
</table>
</div>
<div class="highlighted-box">
	<table class="highlighted-box" id="tblCreatureList">
		<thead>
<tr><th colspan="4">Creatures</th></tr><tr>
	    	<th>Card</th><th>Quantity</th><th>Cost</th><th>Converted Cost</th></tr></thead>
		</tbody>
	</table>
	<table class="highlighted-box" id="tblSpellsList">
		<thead><tr><th colspan="4">Spells</th></tr><tr><th>Card</th><th>Quantity</th><th>Cost</th><th>Converted Cost</th></tr>
		</thead>
		</tbody>
	</table>
	<table class="highlighted-box" id="tblLandList">
		<thead>
<tr><th colspan="4">Lands</th></tr>
	 		<tr><th>Card</th><th>Quantity</th></tr>
	</thead>
		</tbody>
	</table>
</div>
</div>
</div>
</body>
</html>
