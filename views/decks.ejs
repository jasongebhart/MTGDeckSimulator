<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<script type="module" src="./scripts/decks.mjs"></script>
<script type="module">
    import { initializeApp } from './scripts/decks.mjs';
    initializeApp();
</script>
<title>Deck Evaluation</title>
<link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
<link rel="manifest" href="/assets/site.webmanifest">
<link rel="stylesheet" type="text/css" href="/assets/decks.css">
</head>
<body>
<div id="header">
    <%- include('partials/nav'); -%>
</div>
<div id="container">
<div id="sidebar">
  <a href="https://magic.wizards.com/en/game-info/gameplay/rules-and-formats/banned-restricted">Banned List</a>
  <div>
    <section id="deck" class="decklist">
      <fieldset>
          <div>
            <label for="preDefinedDecks">Pre-Defined Decks</label>
            <div class="deckListContainer">
              <%- include('partials/decklist'); -%>
            </div>
          </div>
          <div>
            <label for="localDecks">Local Decks</label>
            <button id="loadXMLFileButton">Load XML File</button>
            <input type="file" name="XMLFile" accept=".xml" id="xmlFile" style="display: none;">
          </div>
        </fieldset>
  </section>
  </div>
  <div>
    <h2>Design Goal</h2>
    <p id="DesignGoal"></p>
  <div class="sidebar-box">
    <table border="0" class="sidebar-box" id="tblSingleDeck">
     <tr><th colspan="2" class="style1" id="DeckListName">Deck Name</th></tr>
      <tr><td>Deck Size</td><td class="deckSize" id="deckSize"></td></tr>
     <tr><td>Converted Cost</td><td class="TotConvertedCost" id="TotConvertedCost"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/land.svg" alt="Lands" class="cost-image">Lands</td><td class="TotLands" id="TotLands"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/creature.svg" alt="Creatures" class="cost-image">Creatures</td><td class="TotCreatures" id="TotCreatures"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/instant.svg" alt="Instant" class="cost-image">Instants</td><td class="TotInstants" id="TotInstants"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/sorcery.svg" alt="Soreries" class="cost-image">Sorceries</td><td class="TotSorceries" id="TotSorceries"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/enchantment.svg" alt="Enchantments" class="cost-image">Enchantments</td><td class="TotEnchantments" id="TotEnchantments"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/artifact.svg" alt="Artifacts" class="cost-image">Artifacts</td><td class="TotArtifacts" id="TotArtifacts"></td></tr>
     <tr><td><img src="/assets/mtgsymbols/planeswalk2.svg" alt="Planeswalkers" class="cost-image">Planeswalkers</td><td class="TotPlaneswalkers" id="TotPlaneswalkers"></td></tr>
    </table>
  </div>
  <p></p>
  <div class="sidebar-box">
    <table class="sidebar-box" id="tblCostDist">
      <tr>
      <th colspan="8" class="style1">Cost Distribution</th></tr>
      <tr><td><img src="/assets/mtgsymbols/0.svg" alt="Zero" class="cost-image"></td><td class="ZeroCost" id="ZeroCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/1.svg" alt="One" class="cost-image"></td><td class="OneCost" id="OneCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/2.svg" alt="Two" class="cost-image"></td><td class="TwoCost" id="TwoCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/3.svg" alt="Three" class="cost-image"></td><td class="ThreeCost" id="ThreeCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/4.svg" alt="Four" class="cost-image"></td><td class="FourCost" id="FourCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/5.svg" alt="Five" class="cost-image"></td><td class="FiveCost" id="FiveCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/6.svg" alt="Six" class="cost-image"></td><td class="SixCost" id="SixCost"></td></tr>
      <tr><td><img src="/assets/mtgsymbols/7.svg" alt="Seven" class="cost-image"></td><td class="SevenmoreCost" id="SevenmoreCost"></td></tr>
    </table>
    </div>
    <div class="sidebar-box">
      <table id="tblColorDist">
        <tr><th colspan="3" class="style1">Color Distribution</th></tr>
        <tr><th colspan="1"></th><th colspan="1">Symbols</th><th colspan="1">Cards</th></tr>
        <tr><td><img src="/assets/mtgsymbols/U.svg" alt="Blue" class="cost-image"></td><td id="BlueCost"></td><td id="BlueCards"></td></tr>
        <tr><td><img src="/assets/mtgsymbols/R.svg" alt="Red" class="cost-image"></td><td id="RedCost"></td><td id="RedCards"></td></tr>
        <tr><td><img src="/assets/mtgsymbols/B.svg" alt="Black" class="cost-image"></td><td id="BlackCost"></td><td id="BlackCards"></td></tr>
        <tr><td><img src="/assets/mtgsymbols/W.svg" alt="White" class="cost-image"></td><td id="WhiteCost"></td><td id="WhiteCards"></td></tr>
        <tr><td><img src="/assets/mtgsymbols/G.svg" alt="Green" class="cost-image"></td><td id="GreenCost"></td><td id="GreenCards"></td></tr>
        <tr><td><img src="/assets/mtgsymbols/C.svg" alt="Colorless" class="cost-image"></td><td id="ColorlessCost"></td><td id="ColorlessCards"></td></tr>
      </table>
      </div>
    </div>
</div>  
<div id="main">
<div class="highlighted-box">
	<table class="highlighted-box" id="tblCreatureList">
		<thead>
<tr><th colspan="4"><img src="/assets/mtgsymbols/creature.svg" alt="Creatures" class="header-image">Creatures</th></tr><tr>
		</tbody>
	</table>
	<table class="highlighted-box" id="tblSpellsList">
		<thead><tr><th colspan="4"><img src="/assets/mtgsymbols/instant.svg" alt="Instants" class="header-image">Instants & <img src="/assets/mtgsymbols/sorcery.svg" alt="Sorceries" class="header-image">Sorceries</th></tr><tr><th>Card</th><th>Quantity</th><th>Cost</th><th>Converted Cost</th></tr>
		</thead>
		</tbody>
	</table>
  <table class="highlighted-box" id="tblLandList">
		<thead>
<tr><th colspan="4"><img src="/assets/mtgsymbols/land.svg" alt="Lands" class="header-image">Lands</th></tr>
	 		<tr><th>Card</th><th>Quantity</th></tr>
	</thead>
		</tbody>
	</table>
  <table class="highlighted-box" id="tblArtifactsList">
		<thead><tr><th colspan="4"><img src="/assets/mtgsymbols/artifact.svg" alt="Artifacts" class="header-image">Artifacts</th></tr><tr><th>Card</th><th>Quantity</th><th>Cost</th><th>Converted Cost</th></tr>
		</thead>
		</tbody>
	</table>
  <table class="highlighted-box" id="tblEnchantmentsList">
		<thead><tr><th colspan="4"><img src="/assets/mtgsymbols/enchantment.svg" alt="Enchantments" class="header-image">Enchantments</th></tr><tr><th>Card</th><th>Quantity</th><th>Cost</th><th>Converted Cost</th></tr>
		</thead>
		</tbody>
	</table>
  <table class="highlighted-box" id="tblPlaneswalkersList">
		<thead><tr><th colspan="4"><img src="/assets/mtgsymbols/planeswalk2.svg" alt="Planeswalkers" class="header-image">Planeswalkers</th></tr><tr><th>Card</th><th>Quantity</th><th>Cost</th><th>Converted Cost</th></tr>
		</thead>
		</tbody>
	</table>
</div>
</div>
</div>
</body>
</html>
